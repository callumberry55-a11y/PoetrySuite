{
	"appId": "com.poetrysuite.app",
	"appName": "Poetry Suite",
	"webDir": "dist",
	"server": {
		"androidScheme": "https"
	},
	"plugins": {
		"SplashScreen": {
			"launchShowDuration": 2000,
			"backgroundColor": "#10b981",
			"showSpinner": false,
			"androidSpinnerStyle": "large",
			"spinnerColor": "#ffffff",
			"splashFullScreen": true,
			"splashImmersive": true
		},
		"StatusBar": {
			"style": "DARK",
			"backgroundColor": "#10b981"
		},
		"Keyboard": {
			"resize": "body",
			"style": "DARK",
			"resizeOnFullScreen": true
		},
		"App": {
			"launchAutoHide": true
		}
	}
}
