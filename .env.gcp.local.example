# Google Cloud Platform Configuration - LOCAL COPY
# Copy this to .env.gcp.local and fill in your actual values
# NEVER commit .env.gcp.local to version control!

# GCP Project Settings
GCP_PROJECT_ID=your-project-id
GCP_REGION=us-central1
GCP_ZONE=us-central1-a

# VPC Configuration
VPC_NETWORK_NAME=default
VPC_CONNECTOR_NAME=poetry-vpc-connector
VPC_SUBNET_RANGE=10.8.0.0/28

# OpenVPN Settings
OPENVPN_SERVER_IP=your-openvpn-server-ip
OPENVPN_PORT=1194
OPENVPN_PROTOCOL=udp
VPN_SUBNET=10.8.0.0/24

# WPC (WireGuard/VPN) Allocated Subnets
WPC_SUBNET_IPV4=100.96.0.0/11
WPC_SUBNET_IPV6=fd:0:0:8000::/49

# WPC Domain Routing Subnets
WPC_ROUTING_SUBNET_IPV4=100.80.0.0/12
WPC_ROUTING_SUBNET_IPV6=fd:0:0:4000::/50

# OpenVPN Authentication Token
# Get this from your OpenVPN server configuration
OPENVPN_AUTH_TOKEN=o+BsyIXFJpN+3BYVlRu02RYNGmguyRVygY6vk/+owwE=33b79ce2d9df73a3b121eb3650dbc479756e6683

# OpenVPN Static Key (if using ta.key)
# Paste your entire ta.key content here or leave empty
OPENVPN_STATIC_KEY=

# Cloud Run Settings
CLOUD_RUN_SERVICE_NAME=poetry-suite
CLOUD_RUN_MAX_INSTANCES=10
CLOUD_RUN_MIN_INSTANCES=1
CLOUD_RUN_MEMORY=512Mi
CLOUD_RUN_CPU=1
CLOUD_RUN_TIMEOUT=300

# Deployment Settings
DEPLOY_TYPE=cloudrun
VPC_EGRESS=all-traffic

# Application Environment Variables
VITE_SUPABASE_URL=your-supabase-url
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key
VITE_FIREBASE_API_KEY=your-firebase-api-key
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-firebase-project
VITE_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
VITE_FIREBASE_APP_ID=your-app-id
VITE_FIREBASE_MEASUREMENT_ID=your-measurement-id
